	@ echo "                                                              "
	@ echo "=============================================================="
	@ echo "    linking files for sequential version of block splitter    "
	@ echo "=============================================================="
	@ echo "                                                              "
	( cd $(SPLITD); make -f $(MAKEFILE) link \
